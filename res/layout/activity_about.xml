    android:fadingEdgeLength="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/scrollview_fade_pad"
    android:paddingTop="@dimen/scrollview_fade_pad"
    android:requiresFadingEdge="vertical"
